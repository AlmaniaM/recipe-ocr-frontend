{
  "name": "recipe-ocr-frontend",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "ulimit -n 65536 && expo start",
    "android": "ulimit -n 65536 && expo start --android",
    "ios": "ulimit -n 65536 && expo start --ios",
    "web": "ulimit -n 65536 && expo start --web",
    "start:tunnel": "ulimit -n 65536 && expo start --tunnel",
    "start:clear": "ulimit -n 65536 && expo start --clear",
    "setup:watchman": "./setup-watchman.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "e2e:android": "detox test --configuration android.emu.debug",
    "e2e:android:release": "detox test --configuration android.emu.release",
    "e2e:build:android": "detox build --configuration android.emu.debug"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-navigation/bottom-tabs": "^7.4.9",
